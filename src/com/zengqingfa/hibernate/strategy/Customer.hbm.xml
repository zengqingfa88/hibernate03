<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.atguigu.hibernate.strategy">
    
    <class name="com.zengqingfa.hibernate.strategy.Customer" table="CUSTOMERS" lazy="true" batch-size="5">
    
        <id name="customerId" type="java.lang.Integer">
            <column name="CUSTOMER_ID" />
            <generator class="native" />
        </id>
    
        <property name="customerName" type="java.lang.String">
            <column name="CUSTOMER_NAME" />
        </property>
        
        <set name="orders" table="ORDERS" 
        	inverse="true" order-by="ORDER_NAME DESC" lazy="true"
        	batch-size="2" fetch="subselect">
        	<key column="CUSTOMER_ID"></key>
        	<one-to-many class="com.zengqingfa.hibernate.strategy.Order"/>
        </set>
        
    </class>
    
</hibernate-mapping>
